{
    "root": true,
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "plugin:jsdoc/recommended-typescript-error",
        "airbnb-base",
        "prettier"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": [
            "./tsconfig.json"
        ]
    },
    "plugins": [
        "jsdoc",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": "error",
        "jsdoc/require-description": 2
    },
    "ignorePatterns": [
        "src/**/*.test.ts"
    ]
}